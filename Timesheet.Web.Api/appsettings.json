{
  "AppSettings": {
    "Token": "You should not really use this, Change asap",
    "Cors": "http://localhost:3000; https://localhost:3000"
  },

  "TimesheetExport": {
    "Destination": "C:\\Users\\Hp\\Documents\\Timesheet"
  },

  "ConnectionStrings": {
    "Timesheet": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=Timesheet;Integrated Security=True"
    //"Timesheet": "Server=tcp:wfetimesheet.database.windows.net,1433;Initial Catalog=Timesheet;Persist Security Info=False;User ID=timesheetAppUser;Password=Elfein@2017*;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
    }
  },

  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft": "Information",
        "System": "Warning"
      }
    },

    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {SourceContext} {CorrelationId} {ThreadId} {Level:u3}] [{Username}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
